{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./packages*"
      ]
    },
    "composite": true,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts"
  ]
}